            <com.thecoffeehouse.guestapp.screens.order.trackingorder.TrackingOrderActionView android:id="@+id/layout_order_actions" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_4dp"/>
