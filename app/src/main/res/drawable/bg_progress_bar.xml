<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:thickness="1dp">
                <gradient android:startColor="@color/progress_bar_blue" android:endColor="@color/progress_bar_blue" android:angle="270" android:centerY="0.75" android:centerColor="@color/progress_bar_blue"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:thickness="2dp">
                <gradient android:startColor="@color/progress_bar_blue" android:endColor="@color/progress_bar_blue" android:angle="270" android:centerY="0.75" android:centerColor="@color/progress_bar_blue"/>
            </shape>
        </clip>
    </item>
</layer-list>
